	        <activity android:name="com.flappjaxxx.fjtools.ToolsActivity"
	           android:configChanges="orientation|keyboardHidden|screenSize" android:theme="@style/MyTheme" android:launchMode="singleTask" android:clearTaskOnLaunch="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
